<div class="w-96 bg-white rounded-lg shadow-lg p-8">
  <div class="bg-gradient-to-r from-purple-500 to-red-500 text-white font-bold text-center text-3xl leading-none py-6 rounded-t-lg">
    Вход
  </div>
  <%= form_with(url: login_path, class: "p-6") do |form| %>
    <div class="mb-4 relative">
      <%= form.email_field :email, class: "w-full h-12 px-4 py-2 border border-red-500 rounded-full bg-transparent text-black outline-none focus:border-red-500", placeholder: "Email", required: true %>
    </div>
    <div class="mb-4 relative">
      <%= form.password_field :password, class: "w-full h-12 px-4 py-2 border border-red-500 rounded-full bg-transparent text-black outline-none focus:border-red-500", placeholder: "Пароль", required: true %>
    </div>
    <div class="field">
      <%= form.submit "Войти", class: "w-full inline-flex justify-center py-3 px-4 text-lg font-medium text-white bg-gradient-to-r from-purple-500 to-red-500 rounded-full cursor-pointer transition-transform transform hover:scale-95" %>
    </div>
  <% end %>
  <div class="mt-6 text-center text-black">
    Не зарегистрированы? <%= link_to "Зарегистрируйтесь сейчас", signup_path, class: "text-red-500 hover:underline" %>
  </div>
</div>
