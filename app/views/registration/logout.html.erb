<!-- app/views/registration/login_form.html.erb -->
<h1>Log In</h1>
<%= form_with(url: login_path) do |form| %>
  <div>
    <%= form.label :login %>
    <%= form.text_field :login %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log In" %>
  </div>
<% end %>
